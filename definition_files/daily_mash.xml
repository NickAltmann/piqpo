<?xml version="1.0" encoding="UTF-8"?>
<Feed>
  <Parameters>
      <Parameter name="url"/>
  </Parameters>    
  <Source>
    <RSSSource url="%url%"/>
  </Source>
  <Transforms>
    <LoadLinkTransform>
      <Xslt>
        <xsl:stylesheet version="1.0" xmlns:b="http://www.w3.org/1999/xhtml" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
          <xsl:output omit-xml-declaration="yes" indent="yes"/>
          <xsl:template match="/">
            <xsl:element name='transform'>
              <xsl:element name='image'>
                <xsl:value-of select='//b:div[@class="fullstory"]/b:div/b:img/@src' />
              </xsl:element>
              <xsl:element name='caption'>
                <xsl:value-of select='//b:div[@class="fullstory"]/b:div/b:img/@alt' />
              </xsl:element>
            </xsl:element>
          </xsl:template>
        </xsl:stylesheet>
      </Xslt>
    </LoadLinkTransform>
    <CopyValueTransform source='transform.image' target='item_image' mandatory='true' />
    <CopyValueTransform source='transform.caption' target='item_image_caption' mandatory='false' />
    <CopyValueTransform source='link' target='guid' mandatory='true' />
    <SetValueTransform tag='logo' value='http://www.thedailymash.co.uk/images/logo_wide_nonews.jpg' />   
    <ImageSizeTransform source='item_image' />
  </Transforms>
</Feed>
